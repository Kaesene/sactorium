{
  "name": "sactorium",
  "version": "1.0.0",
  "description": "Sistema de gest√£o de produtos e vendas - Sactorium Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "npm run start",
    "build": "electron-builder",
    "build:test": "electron-builder --publish=never",
    "build:prod": "electron-builder --publish=never",
    "dist": "electron-builder --publish=never",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor", 
    "version:major": "npm version major",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "author": "Sactorium",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5",
    "csv-parser": "^3.0.0"
  },
  "build": {
    "appId": "com.sactorium.desktop",
    "productName": "Sactorium",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "dmg": {
      "title": "Sactorium Desktop"
    }
  }
}